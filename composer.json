{
    "name": "resto2web/core",
    "description": "Core package for Resto2Web functionalities",
    "keywords": [
        "resto2web",
        "core"
    ],
    "homepage": "https://github.com/resto2web/core",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Lucas Houssa",
            "email": "lucas@retinens.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "artesaos/seotools": "^0.20",
        "chillerlan/php-qrcode": "^4.3",
        "illuminate/support": "^8.0",
        "laravel/sanctum": "^2.8",
        "laravel/ui": "^3.1",
        "livewire/livewire": "^2.3",
        "rap2hpoutre/laravel-log-viewer": "^1.7",
        "spatie/laravel-honeypot": "^3.0",
        "spatie/laravel-settings": "^1.0",
        "yoeunes/notify": "^1.0"
    },
    "require-dev": {
        "orchestra/canvas": "^6.1",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Resto2web\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Resto2web\\Core\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Resto2web\\Core\\CoreServiceProvider"
            ],
            "aliases": {
                "Core": "Resto2web\\Core\\CoreFacade"
            }
        }
    }
}
